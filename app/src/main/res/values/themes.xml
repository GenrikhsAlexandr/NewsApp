<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.NewsApp" parent="Theme.Material3.Light.NoActionBar">

        <item name="android:navigationBarColor">@color/ic_launcher_background</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="colorControlActivated">@color/light_text</item>
        <item name="android:editTextColor">@color/light_text</item>
        <item name="android:windowLightStatusBar">?attr/isLightTheme</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="ToolbarTextStyle">
        <item name="android:textSize">22sp</item>
    </style>

    <style name="App.Custom.Indicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/bottom_navigation_item</item>
    </style>


    <style name="CustomOutlineBox" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/ic_launcher_background</item>
        <item name="android:textColorHint">@color/light_text</item>
        <item name="hintTextColor">@color/ic_launcher_background</item>
    </style>

    <style name="Widget.App.MaterialDivider" parent="Widget.MaterialComponents.MaterialDivider">
        <item name="dividerColor">@color/color_divider</item>
    </style>

</resources>